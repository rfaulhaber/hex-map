
{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": ["react"],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "max-len": ["error", 120, 4],
        "indent": [
            "error"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-destructuring": ["error", {
            "array": true,
            "object": true
            }, {
                "enforceForRenamedProperties": false
            }]
    }
}